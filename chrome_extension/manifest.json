{
    "manifest_version": 3,
    "name": "PriceSnap",
    "version": "1.0",
    "description": "Help you to search for relavent products when shopping.",
    "permissions": ["scripting", "activeTab", "clipboardRead", "sidePanel"],
    "background": {
        "service_worker": "background/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.facebook.com/marketplace/item/*"],
            "js": ["content/addSearchButton.js",
                "content/extractProductInfo.js",
                "content/popupWindow.js"],
            "css": ["content/styles.css"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
          "resources": ["content/searchIcon.png"],
          "matches": ["<all_urls>"]
        }
      ]
}